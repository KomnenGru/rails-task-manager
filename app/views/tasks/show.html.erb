<h3><%= @task.title %></h3>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<% if @task.completed == true %>
<i class="fas fa-check-square"></i>
  <% else %>
<i class="fas fa-square"></i>
<% end %>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit task", edit_task_path %>
<%= link_to "Remove this", delete_task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
